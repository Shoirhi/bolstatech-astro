---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getBlogs } from "@/lib/microcms";
const response = await getBlogs({ fields: ["id", "title"] });
---

<BaseLayout>
  <section class="w-full py-16">
    <div class="container">
      <div class="space-y-6">
        <h1
          class="text-4xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none"
        >
          Welcome to My Site
        </h1>
        <p class="max-w-[500px] text-lg text-muted-foreground">
          僕のエンジニア活動のパーソナルサイトです。技術発信や、開発したものを載せていきます。
        </p>
      </div>
      <a
        href="/blog"
      >
        ブログを覗いてみる
      </a>
    </div>
  </section>
	<div class="mt-16">
		<ul>
      {
        response.contents.map((content: any) => (
          <li>
            <a href={content.id}>{content.title}</a>
          </li>
        ))
      }
    </ul>
	</div>
</BaseLayout>
