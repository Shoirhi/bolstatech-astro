---
import HeadSEO from "@/components/HeadSEO.astro";
import HeadThemeChange from "@/components/HeadThemeChange.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import type { Props } from "@/components/HeadSEO.astro";

const { title, description, ogImage, structuredData } = Astro.props;
---

<html lang="ja">
  <head>
    <HeadSEO title={title} description={description} ogImage={ogImage} structuredData={structuredData} />
    <HeadThemeChange />
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="relative flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
